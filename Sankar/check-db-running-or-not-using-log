from subprocess import check_output

my_commands = ['check_db', 'check_pds', 'check_mts']
my_out = ['db_ruuning', 'pds_running', 'mts_running']


for x,y in zip(my_commands, my_out):
    out = check_output(x).decode().splitlines()
    if y in out:
        print(y)
    else:
        print('Not '+ y)
